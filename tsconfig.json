{
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx" // Ensure using the new JSX transform
  },
  "include": [
    "src",
    "src/types" // If you placed declarations here
  ]
}
